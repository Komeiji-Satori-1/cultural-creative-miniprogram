/* pages/index/index.wxss */
page {
  background-color: #f7f8fa;
}

.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60rpx;
}

/* === 轮播图 === */
.banner {
  width: 94%;
  height: 360rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx 0 40rpx 0;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}

/* === 提示栏 === */
.welcome-tips {
  background: #ffffff;
  width: 90%;
  border-radius: 14rpx;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.icon {
  color: #07c160;
  font-size: 36rpx;
  margin-right: 10rpx;
}

.welcome-text {
  color: #333;
  font-size: 28rpx;
}

/* === 菜单区 === */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  width: 90%;
}

.menu-item {
  background: #ffffff;
  border-radius: 20rpx;
  text-align: center;
  padding: 40rpx 0;
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.06);
  transition: 0.3s;
}

.menu-item:active {
  transform: scale(0.97);
}

.menu-item.large {
  grid-column: span 1;
  background: linear-gradient(135deg, #07c160, #00b37e);
  color: #fff;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.menu-item text {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: inherit;
}
/* === 动画部分 === */
.fade-in {
  opacity: 0;
  animation: fadeIn 0.8s ease forwards;
}

.fade-in-delay {
  opacity: 0;
  animation: fadeIn 0.8s ease 0.3s forwards;
}

.slide-in {
  opacity: 0;
  transform: translateY(-30rpx);
  animation: slideIn 0.8s ease forwards;
}

.slide-up {
  opacity: 0;
  transform: translateY(40rpx);
  animation: slideUp 0.8s ease 0.5s forwards;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideIn {
  from { opacity: 0; transform: translateY(-30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}


