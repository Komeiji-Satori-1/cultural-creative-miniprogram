/* 整个页面，确保内容可以滚动，底部留出 bottom-bar 的高度 */
.detail-page {
  padding-bottom: 120rpx; /* 假设底部操作栏高度为 100rpx，留出一些额外空间 */
  min-height: 100vh; /* 确保内容不足时也能撑满屏幕 */
  background-color: #f7f7f7; /* 浅灰色背景，增加层次感 */
}

/* 通用卡片样式 */
.info-card, .description-card {
  margin: 20rpx 30rpx; /* 上下 20rpx, 左右 30rpx 的外边距 */
  padding: 30rpx; /* 内部 30rpx 的内边距，防止内容贴边 */
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05); /* 轻微阴影，增加立体感 */
}

/* 产品名称 */
.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  line-height: 1.4; /* 增加行高，防止文字堆叠 */
}

/* 描述文字 */
.product-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6; /* 增加行高，提高阅读性 */
}

.product-image-section {
  width: 100%;
  height: 500rpx; /* 设定一个固定高度，避免图片加载后高度变化 */
  position: relative; /* 必须设置，用于库存标签的绝对定位 */
}

.product-img {
  width: 100%;
  height: 100%;
  
}

.stock-tag {
  position: absolute;
  top: 30rpx;
  left: 0;
  padding: 10rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色背景 */
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 0 16rpx 16rpx 0; /* 左侧直角，右侧圆角 */
}

/* 使用 Flexbox 使价格和数量选择器左右对齐 */
.price-and-quantity-row {
  display: flex;
  justify-content: space-between; /* 两端对齐 */
  align-items: center; /* 垂直居中对齐 */
}

.product-price {
  font-size: 48rpx;
  color: #ff0000; /* 突出价格 */
  font-weight: bold;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
}

.qty-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0;
  margin: 0 0rpx;
  border: none;
  border-radius: 50%;
  color: #333333;
}

.quantity {
  margin: 0 10rpx;
  font-size: 30rpx;
  min-width: 40rpx; /* 确保数字变化时不会晃动 */
  text-align: center;
}


/* 移除或注释掉原有的 price-and-quantity-row 样式 */
