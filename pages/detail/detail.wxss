/* ------------------ 底部操作栏（bottom-bar） ------------------ */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  min-height: 100rpx; 
  
  /* ❗ 关键：使用 Flexbox 水平排列并平均分配空间 */
  display: flex;
  justify-content: space-around; /* 或者 space-between */
  align-items: center;
  
  padding: 10rpx 30rpx; /* 上下留出内边距 */
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
  
  /* 适配底部安全区 */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom); 
}

/* 底部价格样式 */
.product-price-bottom {
  font-size: 40rpx; /* 略小一点，但仍突出 */
  color: #ff0000;
  font-weight: bold;
  /* 占据一小部分空间 */
  flex-shrink: 0; 
  margin-right: 20rpx;
}

/* 底部数量选择器样式 */
.quantity-selector-bottom {
  display: flex;
  align-items: center;
  /* 占据一小部分空间 */
  flex-shrink: 0; 
  margin-right: 30rpx;
}

