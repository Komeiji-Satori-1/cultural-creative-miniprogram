.page-wrapper {
  position: relative;
  height: 100vh; /* 整个页面高度 */
}
.content {
  height: calc(100vh - 100rpx); /* 减去底部按钮高度 */
  overflow-y: scroll;
}
/* 顶部状态 */
.status-box {
  padding: 30rpx;
  background-color: #f8f8f8;
  text-align: center;
}
.status-text {
  font-size: 36rpx;
  font-weight: 600;
}
.status-desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #888;
}

/* 分块标题 */
.section-title {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  font-weight: 600;
  background-color: #f5f5f5;
  margin-top: 20rpx;
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
}
.product-item {
  display: flex;
  margin-bottom: 25rpx;
}
.product-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}
.product-info {
  margin-left: 20rpx;
  flex: 1;
}
.product-name {
  font-size: 30rpx;
  font-weight: 600;
}
.product-spec {
  font-size: 26rpx;
  color: #666;
  margin: 10rpx 0;
}
.product-bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.product-price {
  font-size: 30rpx;
  color: #000;
}
.product-qty {
  font-size: 28rpx;
  color: #888;
}

/* 信息盒子 */
.info-box {
  background: #fff;
  padding: 20rpx 30rpx;
}
.info-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  font-size: 28rpx;
}
.info-row.total text {
  font-weight: 600;
}
.total-price {
  font-size: 32rpx;
  color: #e64340;
}
.address {
  max-width: 400rpx;
  text-align: right;
  color: #555;
}

/* 售后按钮 */
.after-sale-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 80rpx;
  background-color: #4caf50;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}

/* 底部按钮组 */
.bottom-btns {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
}
.btn {
  flex: 1;
  margin: 0 10rpx;
}
.cancel {
  background: #e64340;
  color: white;
}
