.product-scroll {
  height: calc(100vh - 120rpx - 110rpx);
  background: #fafafa;
}
.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}



/* 商品卡片（核心） */
.product-card {
  width: 48%;
  box-sizing: border-box;

  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;

  display: flex;
  flex-direction: column;
  align-items: center;

  position: relative;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.08);
}
/* 已售罄 */
.product-card.sold-out {
  opacity: 0.45;
}
/* 库存角标 */
.stock-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  padding: 4rpx 10rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: #ff4d4f;
  border-radius: 20rpx;
}
/* 商品图片 */
.product-img {
  width: 100%;
  height: 250rpx;
  border-radius: 12rpx;
}


/* 名称 & 价格 */
.product-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 10rpx;
  text-align: center;
}

.product-price {
  font-size: 28rpx;
  color: #e64340;
  margin: 6rpx 0;
}
/* 数量按钮 */
.btn-group {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.btn-group view {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 34rpx;
  border-radius: 8rpx;
  background: #ffffff;
  border: 2rpx solid #ddd;
  color: #333;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

.btn-group view:active {
  background: #f0f0f0;
}

.btn-group text {
  width: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin: 0 10rpx;
}

.btn-group view[disabled="true"] {
  background: #f5f5f5;
  border-color: #e0e0e0;
  color: #aaa;
  box-shadow: none;
}


.btn-group button[disabled] {
  background: #ccc !important;
  color: #666 !important;
}
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: #ffffff;

  display: flex;
  justify-content: space-between;
  align-items: center;

  padding: 0 30rpx;
  box-sizing: border-box;

  border-top: 1px solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);

  z-index: 999;
}


.total {
  font-size: 30rpx;
  color: #666;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.pay-btn {
  background: linear-gradient(90deg, #ff7b33, #ff4d0d);
  padding: 20rpx 60rpx;
  color: white;
  border-radius: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 12rpx rgba(255, 77, 13, 0.3);
  transition: all 0.15s;
}

.pay-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 8rpx rgba(255, 77, 13, 0.2);
}
.info-bar {
  width: 100%;
  background-color: #ffffff;
  padding: 28rpx 32rpx;
  box-sizing: border-box;

  border-bottom: 1px solid #f2f2f2;
}


.info-row {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.label {
  color: #888;
  margin-right: 10rpx;
}

.content {
  color: #111;
  font-weight: 500;
}

