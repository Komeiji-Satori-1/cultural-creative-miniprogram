/* pages/market/market.wxss */
.item_container{
  display: flex;
  flex-direction: row;
  justify-content: left;
  flex-wrap: wrap;
  margin: 20rpx;
}

.item{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin: 15rpx;
  width: 325rpx;
  height: 325rpx;
  background-color:burlywood;
  align-items: center;
  border-radius: 25rpx;
}
.small_item{
  display: flex;
  flex-direction:row;
  justify-content: space-around;
  width: 160rpx;
  height: 50rpx;
  background-color:burlywood;
  align-items: center;
  border-radius: 20rpx;
  margin: 20rpx 0rpx 0rpx 0rpx;
}
.buy_quantity{
  font-size: 24rpx;
}

.large_img{
  width: 250rpx;
  height: 200rpx;
  border-radius: 15rpx;
  justify-content: space-around;
  flex-direction: column;
}
.medium_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  justify-content: center;
  flex-direction: column;
  margin: 5rpx;
}
.normal_text{
  font-size: 30rpx;
  border-radius: 10rpx;
  text-align: center;
  align-items: center;
}


.product-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  gap: 20rpx;
  flex-direction: row;
  width: 750rpx;
}

.product-card {
  width: 300rpx;
  height: 400rpx;
  background: #f5f5dc;
  border-radius: 20rpx;
  padding: 20rpx;
  text-align: center;
}

.product-img {
  width: 100%;
  height: 250rpx;
  border-radius: 16rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  margin-top: 10rpx;
  font-weight: bold;
}

.product-price {
  color: #e64340;
  font-size: 26rpx;
}

.product-quantity {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.btn-group {
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
}

button {
  width: 80rpx;
  height: 60rpx;
  border-radius: 12rpx;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-top: 2rpx solid #ddd;
  padding: 20rpx;
  text-align: right;
  font-size: 30rpx;
  font-weight: bold;
}

.total {
  color: #e64340;
  justify-content: left;
}
