/* pages/Login/Login.wxss */
page {
  background: linear-gradient(135deg, #f0f8ff 0%, #e6f0ff 100%);
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.login-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 60rpx 50rpx;
  width: 80%;
  text-align: center;
  animation: fadeIn 0.8s ease-in-out;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.app-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.login-btn {
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  padding: 20rpx 0;
  width: 100%;
  box-shadow: 0 6rpx 12rpx rgba(7, 193, 96, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: 0.3s;
}

.login-btn:active {
  transform: scale(0.98);
  background: #06ae56;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.login-hint {
  font-size: 24rpx;
  color: #888;
  margin-top: 40rpx;
  display: block;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 遮罩 */
.wx-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.45);
  backdrop-filter: blur(3px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 弹窗主体 */
.wx-dialog {
  width: 78%;
  max-width: 540rpx;
  background: #ffffff;
  border-radius: 18rpx;
  padding: 50rpx 40rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.15);
  animation: fadeInUp 0.24s ease-out;
}

/* 顶部图标 */
.dialog-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 20rpx;
}

/* 标题 */
.dialog-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #000;
}

/* 描述 */
.dialog-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 按钮容器 */
.dialog-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

/* 按钮基础样式 */
.dialog-btn {
  flex: 1;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 18rpx 0;
}

/* 次按钮 */
.cancel {
  background: #f2f2f2;
  color: #333;
}

/* 主按钮 */
.confirm {
  background: #07c160;
  color: #fff;
}

/* 弹出动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

