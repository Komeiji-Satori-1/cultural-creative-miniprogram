<view class="container">

<!-- 顶部用户信息区域 -->
<view class="header">
  <image src="/images/" class="bg" mode="aspectFill"></image>
  <view class="user-info">
    <image src="{{userInfo.avatar_url || 'https://xdwenchuang.cn/static_assets/Logo.jpg'}}" class="avatar"></image>
    <view class="nickname">{{userInfo.nickname || '未登录用户'}}</view>
    <view class="phone">{{userInfo.phone || '点击完善手机号'}}</view>
  </view>
</view>

<!-- 用户统计卡片 -->
<view class="stats-card">
  <view class="stat-item">
    <view class="value">{{userInfo.balance || 0}}</view>
    <view class="label">余额</view>
  </view>
  <view class="stat-item" bindtap="navigateToPointsMall">
    <view class="value">{{userInfo.points || 0}}</view>
    <view class="label">积分</view>
  </view>
  <view class="stat-item" bindtap="navigateToUsercoupon">
    <view class="value">{{coupons_amount || 0}}</view>
    <view class="label">优惠券</view>
  </view>
</view>

<!-- 功能菜单 -->
<view class="menu">
  <view class="menu-item" bindtap="navigateToOrders">
    <text class="iconfont icon-dingdan icon"></text>
    <text>我的订单</text>
  </view>

  <view class="menu-item" bindtap="navigateToPointsMall">
    <text class="iconfont icon-jifen icon"></text>
    <text>积分商城</text>
  </view>
  <view class="menu-item" bindtap="navigateToAddress">
    <text class="iconfont icon-jifen icon"></text>
    <text>地址管理</text>
  </view>
</view>

<!-- 退出登录 -->
<view class="logout-btn" bindtap="logout">退出登录</view>

</view>
