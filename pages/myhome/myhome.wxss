/* pages/myhome/myhome.wxss */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 顶部背景与头像 */
.header {
  position: relative;
  height: 180px;
  text-align: center;
  color: #fff;
}

.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
  filter: brightness(0.7);
  border-radius: 0 0 20rpx 20rpx;
}

.user-info {
  position: relative;
  z-index: 1;
  padding-top: 40rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.nickname {
  font-size: 34rpx;
  margin-top: 10rpx;
  font-weight: bold;
  color: #333;
}

.phone {
  font-size: 26rpx;
  opacity: 0.9;
  color: #333;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  margin: -40rpx 20rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  padding: 20rpx 0;
}

.stat-item {
  text-align: center;
}

.value {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 菜单区 */
.menu {
  margin: 0 20rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item text {
  font-size: 30rpx;
  margin-left: 15rpx;
  color: #333;
}

.logout-btn {
  margin: 40rpx auto;
  width: 80%;
  padding: 26rpx 0;

  background-color: #ffffff;           /* 纯白背景 */
  border: 2rpx solid #b9b9b9;          /* 超浅灰边框 */
  border-radius: 16rpx;

  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;                         /* 深灰文字，减弱攻击性 */

  transition: all 0.2s;
}

/* 点击反馈（极简按压效果） */
.logout-btn:active {
  background-color: #f5f5f5;
  border-color: #dcdcdc;
  color: #000;
  transform: scale(0.98);
}

